<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/per_name"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/per_details"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:id="@+id/per_details"
        android:layout_marginStart="11dp"
        android:layout_below="@+id/per_name"
        android:layout_toEndOf="@+id/per_img"
        android:textColor="@color/gainsboro"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/per_img"
        android:layout_marginStart="29dp"
        android:layout_alignTop="@+id/per_name"
        android:layout_alignParentStart="true" />
</RelativeLayout>
